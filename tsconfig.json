{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "./index.ts",
    "./primitives",
    "./theme",
    "./src"
  ],
  "exclude": [
    "./src/@types"
  ]
}
